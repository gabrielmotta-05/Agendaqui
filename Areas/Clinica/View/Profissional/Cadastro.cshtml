@model Agendaqui.Areas.Clinica.ViewModel.Profissional.ProfissionalViewModel

@{
    ViewData["Title"] = "Cadastro de Profissional";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="Cadastrar" method="post">
        <div class="row g-3">

            <div class="col-12">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="NumeroDeDocumento" class="form-label"></label>
                <input asp-for="NumeroDeDocumento" class="form-control" placeholder="Digite o número do documento" />
                <span asp-validation-for="NumeroDeDocumento" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="TipoDeDocumento" class="form-label"></label>
                <select asp-for="TipoDeDocumento" class="form-select">
                    <option value="">Selecione...</option>
                    <option value="1">CPF</option>
                    <option value="2">CRM</option>
                    <option value="3">Outro</option>
                </select>
                <span asp-validation-for="TipoDeDocumento" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" type="email" placeholder="Digite o e-mail do profissional" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Usuario" class="form-label"></label>
                <input asp-for="Usuario" class="form-control" placeholder="Digite o nome de usuário" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Senha" class="form-label"></label>
                <input asp-for="Senha" class="form-control" type="password" placeholder="Digite a senha" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="ConfirmarSenha" class="form-label"></label>
                <input asp-for="ConfirmarSenha" class="form-control" type="password" placeholder="Confirme a senha" />
                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
            </div>

        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <button type="reset" class="btn btn-secondary ms-2">Cancelar</button>
        </div>
    </form>
</div>
